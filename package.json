{
  "name": "@bicycle-codes/request",
  "version": "0.6.13",
  "description": "Use a `Bearer` token with web crypto to authenticate",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "cd ./test && npm i && esbuild ./index.ts --bundle --platform=node --format=cjs | node | tap-spec",
    "build-cjs": "esbuild src/*.ts --tsconfig=tsconfig.build.json --format=cjs --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "dependencies": {
    "@bicycle-codes/crypto-util": "^0.2.7",
    "@bicycle-codes/message": "^0.8.3"
  },
  "devDependencies": {
    "@substrate-system/tapzero": "^0.10.13",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "ky": "^1.7.2",
    "markdown-toc": "^1.2.0",
    "node-localstorage": "^3.0.5",
    "tap-spec": "^5.0.0",
    "tape-run": "^11.0.0",
    "typescript": "^5.7.3"
  },
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bicycle-codes/request"
  },
  "keywords": [
    "request",
    "signed",
    "headers",
    "webcrypto",
    "http"
  ],
  "bugs": {
    "url": "https://github.com/bicycle-codes/request/issues"
  },
  "homepage": "https://github.com/bicycle-codes/request",
  "license": "SEE LICENSE IN LICENSE"
}
